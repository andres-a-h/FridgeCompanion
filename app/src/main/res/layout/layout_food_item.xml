<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingVertical = "15dp"
    android:paddingHorizontal = "15dp"
    android:layout_marginVertical="15dp"
    android:background="@drawable/rounded"
    >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:id="@+id/food_container">
                <ImageView
                    android:id="@+id/food_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/image_content_des" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/food_container"
            android:layout_marginStart="15dp">
                <TextView
                    android:id="@+id/food_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food Item"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/food_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/food_title"
                    android:text="Food description for sth"
                    android:textSize="14sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#808080" />

                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below = "@id/food_description"
                    android:layout_marginTop="6dp"
                    android:src = "@drawable/ic_baseline_access_time_24"/>
                <TextView
                    android:id="@+id/expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below = "@id/food_description"
                    android:layout_toEndOf="@id/time_icon"
                    android:text = "2 days"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/amount_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below = "@id/food_description"
                    android:text = "3 Left"
                    android:padding="3dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
        </RelativeLayout>

</RelativeLayout>