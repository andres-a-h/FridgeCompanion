<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:paddingVertical = "20dp"
    android:paddingHorizontal = "20dp"
    android:layout_marginVertical="15dp"
    android:background="@drawable/rounded"
    >
        <ImageView
            android:id="@+id/food_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/image_content_des" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/food_image"
            android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/food_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food Item"
                    android:textSize="25sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/food_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/food_title"
                    android:text="Food description for sth"
                    android:textSize="14sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below = "@id/food_description"
                    android:text = "Expired"
                    android:padding="3dp"
                    android:background="#33FA3737"
                    android:textColor="#FF0000"
                    android:textSize="20sp"
                    android:textFontWeight="600"
                    />

                <TextView
                    android:id="@+id/amount_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/expire_date"
                    android:layout_below = "@id/food_description"
                    android:text = "3 Left"
                    android:padding="3dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textFontWeight="600"
                    />
        </RelativeLayout>

</RelativeLayout>